@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<main>

    @foreach (var product in Model)
    {
        <div class="poster">
            <div class="poster-info">
                <h1 class="poster-title">@product.Name</h1>
                <p class="poster-description">@product.Description</p>
                <p class="poster-eventdate">@product.Price</p>

            </div>
            <div class="poster-buttons">
                <form action="@Url.Action("Index", "Product", new {product.Id})" method="post">
                    <input type="hidden" name="Id" value="@product.Id">
                    <button class="view-poster" type="submit">View</button>
                </form>
            </div>
        </div>
    }
</main>
@if (User.Identity == null || !User.Claims.Any())
{
    <div class="container">
        <div class="authentication-buttons-wrapper">
            <div class="authentication-buttons">
                <a asp-action="Login" asp-controller="Account" class="button login-button">
                    login
                    <img class="wheat-icon" src="icons/wheat.svg" />
                </a>
                <a asp-action="RegisterAsBuyer" asp-controller="Account" class="button register-button">Register</a>
                <a asp-action="PointsOfProduction" asp-controller="Map" class="button register-button">Production Points</a>
            </div>
        </div>
        <footer>
            <h2>Not a buyer?</h2>
            <a asp-action="RegisterAsSeller" asp-controller="Account" class="button register-button">Sign up as a seller</a>
        </footer>
    </div>
}
else
{
    <a asp-action="Logout" asp-controller="Account" class="button register-button">Log-out</a>
}
